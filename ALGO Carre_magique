ALGO Carre_magique
//BUT Afficher un carre magique
//ENTREE rien
//SORTIE Le carre magique

CONST
	TAILLE <- 5 : ENTIER

PROCEDURE init_tab(tab : tableau[1..TAILLE,1..TAILLE] de ENTIER)
//BUT Initialise le tableau
//ENTREE la tableau a initialiser
//SORTIE rien

VAR 
x, y :ENTIER

DEBUT
	POUR y DE 1 A TAILLE FAIRE
		POUR x DE 1 A TAILLE FAIRE
			tab[x,y] <- 0
		FINPOUR
	FINPOUR
FIN

FONCTION nbr_chiffre(l: ENTIER)
//BUT dÃ©termine le nombre de chiffres d'un entier positif
//ENTREE Un entier positif
//SORTIE Le nombre de chiffres de cet entier

VAR 
 long, nbr :ENTIER

DEBUT
 	longueur <- 1
 	nbr <- 1
 	TANTQUE nbr > 9 FAIRE
 		long <- long + 1
 		nbr <- nbr DIV 10
 	FINTANTQUE
 	nbr_chiffre <- long
FIN


VAR 
	tablo : tableau[1..TAILLE,1..TAILLE] de ENTIER
	x, y, i, long, long_max : ENTIER

DEBUT

		init_tab(tablo)
		long_max <- 1
		long <- 1
		x <- (TAILLE DIV 2) + 1
		y <- TAILLE DIV 2

		POUR i DE 1 A (TAILLE * TAILLE) FAIRE
			tablo[x,y] <- i
			x <- (x + 1)
			SI x > TAILLE ALORS
				x <- 1
			FINSI
			y <- (y - 1)
			SI y < 1 ALORS
				y <- TAILLE
			FINSI
			SI tablo [x,y] > 0 ALORS
				x <- (x - 1)
				SI x < 1 ALORS
					x <- TAILLE
				FINSI
				y <- (y - 1)
				SI y < 1 ALORS
					y <- TAILLE
				FINSI
			FINSI
		FINPOUR

		long_max <- nbr_chiffre(i)

		POUR x DE 1 A TAILLE * (longueur_max + 1) + 1 FAIRE
			ECRIRE '_'
		FINPOUR
		POUR y DE 1 A TAILLE FAIRE
			ECRIRE '|'
			POUR x DE 1 A TAILLE FAIRE
				long <- nbr_chiffre(tablo[x,y])
				POUR i DE 1 A long_max - long FAIRE
					ECRIRE ' '
				FINPOUR
				ECRIRE tablo[x,y] , '|'
			FINPOUR
			ECRIRE
			ECRIRE '|'
			POUR x DE 1 A TAILLE FAIRE
				POUR i DE 1 A long_max FAIRE
					ECRIRE '_'
				FINPOUR
				ECRIRE '|'
			FINPOUR
		FINPOUR
FIN